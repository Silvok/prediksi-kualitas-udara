# PostgreSQL Database Configuration
# Sesuaikan dengan konfigurasi pgAdmin/PostgreSQL lokal Anda
DATABASE_URL=postgresql://postgres:password@localhost:5432/skywise_db

# Atau gunakan konfigurasi terpisah:
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=skywise_db

# Google OAuth Configuration
# Dapatkan dari https://console.cloud.google.com/ > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Secret untuk token authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend URL (untuk CORS)
FRONTEND_URL=http://localhost:5173
